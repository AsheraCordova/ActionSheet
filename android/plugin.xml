<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.ashera.actionsheet"
        version="1.0">

  <name>CordovaActionSheetPlugin</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>
  
  <js-module src="www/ActionSheet.js" name="ActionSheet">
    <clobbers target="window.plugins.actionsheet"/>
  </js-module>
  
  
  <platform name="android">
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="CordovaActionSheetPlugin">
        <param name="android-package" value="com.ashera.actionsheet.CordovaActionSheetPlugin"/>
        <param name="onload" value="true" />
      </feature>
    </config-file>

   	 <!-- start src -->
     <source-file src="src/com/ashera/actionsheet/CordovaActionSheetPlugin.java" target-dir="src/com/ashera/actionsheet"/>
     <source-file src="src/com/baoyz/actionsheet/ActionSheet.java" target-dir="src/com/baoyz/actionsheet"/>
     <!-- src end -->
     <!-- start res -->
     <source-file src="res/drawable/actionsheet_bg_ios6.9.png" target-dir="res/drawable"/>
     <source-file src="res/drawable/actionsheet_bottom_normal.9.png" target-dir="res/drawable"/>
     <source-file src="res/drawable/actionsheet_bottom_pressed.9.png" target-dir="res/drawable"/>
     <source-file src="res/drawable/actionsheet_cancel_bt_bg.9.png" target-dir="res/drawable"/>
     <source-file src="res/drawable/actionsheet_middle_normal.9.png" target-dir="res/drawable"/>
     <source-file src="res/drawable/actionsheet_middle_pressed.9.png" target-dir="res/drawable"/>
     <source-file src="res/drawable/actionsheet_other_bt_bg.9.png" target-dir="res/drawable"/>
     <source-file src="res/drawable/actionsheet_single_normal.9.png" target-dir="res/drawable"/>
     <source-file src="res/drawable/actionsheet_single_pressed.9.png" target-dir="res/drawable"/>
     <source-file src="res/drawable/actionsheet_top_normal.9.png" target-dir="res/drawable"/>
     <source-file src="res/drawable/actionsheet_top_pressed.9.png" target-dir="res/drawable"/>
     <source-file src="res/drawable/slt_as_ios7_cancel_bt.xml" target-dir="res/drawable"/>
     <source-file src="res/drawable/slt_as_ios7_other_bt_bottom.xml" target-dir="res/drawable"/>
     <source-file src="res/drawable/slt_as_ios7_other_bt_middle.xml" target-dir="res/drawable"/>
     <source-file src="res/drawable/slt_as_ios7_other_bt_single.xml" target-dir="res/drawable"/>
     <source-file src="res/drawable/slt_as_ios7_other_bt_top.xml" target-dir="res/drawable"/>
     <!-- res end -->
     <!-- start tsc -->

     <!-- tsc end -->
  </platform>


</plugin>